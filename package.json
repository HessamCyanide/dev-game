{
  "name": "project-sass",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass sass/main.scss public/css/style.css -w",
    "compile:sass": "sass sass/main.scss public/css/style.compile.css",
    "perfix:css": "postcss --use autoprefixer -b 'last 10 version' public/css/style.compile.css -o public/css/style.perfix.css",
    "compress:css": "sass public/css/style.perfix.css public/css/style.css --style=compressed",
    "build:css": "npm-run-all compile:sass perfix:css compress:css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.1",
    "sass": "^1.86.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@parcel/watcher": "^2.5.1"
  }
}
